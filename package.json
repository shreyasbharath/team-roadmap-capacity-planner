{
  "name": "roadmap-planner",
  "version": "1.0.0",
  "description": "Interactive roadmap and capacity planning tool",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run --reporter=basic",
    "test:watch": "vitest --reporter=basic",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage --reporter=basic",
    "test:visual": "pnpm test && node scripts/visual-regression-tests.js",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "pdf": "node scripts/generate-pdf.js",
    "pdf:landscape": "node scripts/generate-pdf.js --landscape",
    "pdf:a3": "node scripts/generate-pdf.js --format=A3",
    "screenshot:examples": "node scripts/generate-examples-screenshots.js",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "tauri:icon": "tauri icon",
    "release:patch": "npm version patch && git push && git push --tags",
    "release:minor": "npm version minor && git push && git push --tags",
    "release:major": "npm version major && git push && git push --tags",
    "release:manual": "echo 'Use GitHub workflow_dispatch to create manual releases'"
  },
  "keywords": [
    "roadmap",
    "planning",
    "timeline",
    "project-management",
    "capacity-planning",
    "react",
    "desktop",
    "tauri"
  ],
  "author": "Open Source Community",
  "license": "MIT",
  "dependencies": {
    "@tauri-apps/api": "^1.6.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@tauri-apps/cli": "^1.6.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^0.34.6",
    "@vitest/ui": "^0.34.7",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.31.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^15.15.0",
    "jsdom": "^23.2.0",
    "postcss": "^8.5.6",
    "puppeteer": "^22.15.0",
    "semver": "^7.6.0",
    "tailwindcss": "^3.4.17",
    "vite": "^4.5.14",
    "vitest": "^0.34.6"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
